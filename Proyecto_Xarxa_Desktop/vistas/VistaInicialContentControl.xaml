<UserControl
    x:Class="Proyecto_Xarxa_Desktop.vistas.VistaInicialContentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Proyecto_Xarxa_Desktop.vistas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="28"
            Foreground="{StaticResource PrimaryColor2}">
            <Run Text="Bienvenid@ " />
            <Run Text="{Binding Path=UsuarioLogeado.NombreUsuario}" />
            <Run Text="!" />
        </TextBlock>
        <Image Width="500" Source="/assets/xarxa.png" />
    </StackPanel>
</UserControl>
