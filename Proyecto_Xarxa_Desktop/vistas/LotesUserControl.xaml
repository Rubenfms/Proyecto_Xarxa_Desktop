<UserControl
    x:Class="Proyecto_Xarxa_Desktop.vistas.LotesUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convertidores="clr-namespace:Proyecto_Xarxa_Desktop.convertidores"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Proyecto_Xarxa_Desktop.vistas"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource SecondaryColor2}"
    mc:Ignorable="d">

    <UserControl.Resources>

        <Style
            x:Key="EstiloBoton"
            BasedOn="{StaticResource MaterialDesignFlatAccentBgButton}"
            TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="10" />
        </Style>

        <Style x:Key="TriggerRadioButton" TargetType="{x:Type RadioButton}">
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True" />
            </Style.Triggers>

        </Style>

    </UserControl.Resources>

    <DockPanel>
        <StackPanel Margin="0,50,0,0" DockPanel.Dock="Right">
            <Button
                Click="GenerarLoteButton_Click"
                Content="Generar Lote"
                Style="{StaticResource EstiloBoton}" />
            <Button Content="Editar Lote" Style="{StaticResource EstiloBoton}" />
            <Button Content="Eliminar Lote" Style="{StaticResource EstiloBoton}" />
            <StackPanel Margin="0,60,0,0">
                <Button Content="Asignar Lote" Style="{StaticResource EstiloBoton}" />
                <Button Content="Desasignar Lote" Style="{StaticResource EstiloBoton}" />
            </StackPanel>
        </StackPanel>

        <ListView
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Path=ListaLotes}"
            SelectedItem="{Binding Path=LoteSeleccionado}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <RadioButton
                                    x:Name="myRadio"
                                    GroupName="IsSelected"
                                    IsChecked="{Binding Path=vm.IsSelected}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding IdLote}"
                        Header="Id" />
                    <GridViewColumn Width="120" Header="_Nombre" />
                    <GridViewColumn Width="140" Header="_SampleSet" />
                    <GridViewColumn Width="120" Header="_Hitsound" />
                </GridView>
            </ListView.View>
        </ListView>

        <!--  Listbox con los lotes (lastchild)
        <ListBox
            HorizontalContentAlignment="Stretch"
            ItemsSource="{Binding Path=ListaLotes}"
            ScrollViewer.VerticalScrollBarVisibility="Hidden"
            SelectedItem="{Binding Path=LoteSeleccionado}"
            Style="{StaticResource MaterialDesignNavigationListBox}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
