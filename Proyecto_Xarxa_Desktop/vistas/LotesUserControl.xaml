<UserControl
    x:Class="Proyecto_Xarxa_Desktop.vistas.LotesUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Proyecto_Xarxa_Desktop.vistas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#4A6572"
    mc:Ignorable="d">
    <ListBox
        ItemsSource="{Binding Path=ListaLotes}"
        ScrollViewer.VerticalScrollBarVisibility="Hidden"
        SelectedItem="{Binding Path=LoteSeleccionado}"
        Style="{StaticResource MaterialDesignNavigationListBox}">
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel />
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
        <ListBox.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Path=IdLote}">
                    <Run Text="{Binding Path=IdModalidad}" />
                    <Run Text="Dato 3" />
                    <Run Text="Dato 4" />
                    <Run Text="Dato 5" />
                    <Run Text="Dato 6" />
                </TextBlock>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
